@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Index";

}



@{
    if (TempData["success"] != null)
    {
        <h2 style="color: white;">@TempData["success"]</h2>
    }
}
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">        <h2 class="text-primary">Employee List</h2>    </div>
   
    </div>
    <br />  <br />

    <table class="table table-bordered table-striped " style="width:100%">

        <thead>
            <tr>

                <th>
               Full Name

                </th>
                <th>
                 Email
                </th>
                <th>
                Birthdate
                </th>
                <th>
                  PhoneNumber
                </th>
            </tr>

        </thead>


        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%">
                        @obj.EmployeeName
                    </td>
                    <td width="20%">
                        @obj.EmployeeEmail
                    </td>
                    <td width="20%">
                        @obj.EmployeeBirthDate
                    </td>
                    <td width="15%">
                        @obj.PhoneNumber
                    </td>
                    <td class="w-30 btn btn-group" role="group">
                        <a asp-action="AddEmployee" asp-controller="Employee" asp-route-id="@obj.EmployeeId"
                       class="mx-1 btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                          Add 
                        </a>

                    </td>
                    <td class="w-20 btn btn-group" role="group">
                        <a asp-action="edit" asp-controller="Employee" asp-route-id="@obj.EmployeeId"
                       class="mx-1 btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>

                    </td>
                   
                    <td class="w-30 btn btn-group" role="group">
                        <a asp-action="delete" asp-controller="Employee" asp-route-id="@obj.EmployeeId"
                       class="mx-1  btn btn-danger ">
                            <i class="bi bi-trash3-fill"></i>
                            Delete
                        </a>
                    </td>
             
                </tr>


            }



        </tbody>


    </table>
    

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#AddModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
    });
</script> 